<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5dc"> <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/checklist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f5f5dc"

        app:titleTextColor="@android:color/black"

        app:navigationIcon="@drawable/ic_close"
        app:title="">

        <ImageView
            android:id="@+id/btnSaveChecklist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/simpan"
            android:layout_gravity="end"
            android:paddingHorizontal="16dp"
            android:contentDescription="@string/btn_saveadd_image"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/btnPickChecklistImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"
            android:layout_gravity="end"
            android:paddingHorizontal="16dp"
            android:contentDescription="@string/desc_pilihgambar_button"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </com.google.android.material.appbar.MaterialToolbar>
</com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etChecklistTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_jdllist_text"
                android:textSize="24sp"
                android:textStyle="bold"

                android:textColor="@android:color/black"

                android:textColorHint="@android:color/black"

                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp"
                android:inputType="textCapSentences"/>

            <FrameLayout
                android:id="@+id/frameLayoutChecklistImageContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/ivChecklistImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/desc_gambar_preview"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <ImageView
                    android:id="@+id/ivDeleteChecklistImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_delete"
                    android:background="@drawable/circle_background_red"
                    android:padding="4dp"
                    app:tint="@color/white"
                    android:contentDescription="@string/desc_tutup_button" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChecklistItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_checklist"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:id="@+id/btn_add_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/btn_tmbhlist"
                    app:tint="#888888"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_dftritem"
                    android:textColor="#888888"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/checklist_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCheckedItemsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_cntngitm"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:visibility="gone"

                android:textColor="@android:color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCheckedItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_checklist_checked"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>